{
    "name": "websocket",
    "description": "RFC 6455 WebSocket library for D - standalone, zero dependencies",
    "authors": ["Aurora Framework"],
    "license": "MIT",
    "version": "1.0.0",

    "sourcePaths": ["source"],
    "importPaths": ["source"],

    "buildTypes": {
        "release": {
            "dflags-ldc2": ["-O2", "-release", "-enable-inlining"],
            "dflags-dmd": ["-O", "-release", "-inline"]
        },
        "release-fast": {
            "dflags-ldc2": ["-O3", "-release", "-enable-inlining", "-mcpu=native", "-flto=full"],
            "dflags-dmd": ["-O", "-release", "-inline", "-boundscheck=off"]
        },
        "release-safe": {
            "dflags-ldc2": ["-O2", "-release", "-enable-inlining"],
            "dflags-dmd": ["-O", "-release", "-inline"]
        }
    },

    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "sourcePaths": ["source", "tests/unit"],
            "importPaths": ["source", "tests/unit"],
            "mainSourceFile": "tests/runner.d"
        }
    ]
}
