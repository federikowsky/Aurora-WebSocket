{
    "name": "aurora-websocket",
    "description": "RFC 6455 WebSocket library for D - standalone, zero dependencies",
    "authors": ["Federico Filippi"],
    "license": "MIT",
    "homepage": "https://github.com/federikowsky/aurora-websocket",
    "copyright": "Copyright 2024 Federico Filippi",
    
    "targetType": "library",
    "sourcePaths": ["source"],
    "importPaths": ["source"],
    
    "buildTypes": {
        "release": {
            "dflags-ldc2": ["-O2", "-release", "-enable-inlining"],
            "dflags-dmd": ["-O", "-release", "-inline"]
        }
    },
    
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "dependencies": {
                "unit-threaded": "~>2.1.0"
            },
            "sourcePaths": ["source", "tests/unit"],
            "importPaths": ["source", "tests/unit"],
            "mainSourceFile": "tests/runner.d"
        }
    ]
}
